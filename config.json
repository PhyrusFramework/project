{
    "title": "Phyrus project",
    "version": "1.0",

    "environment": "dev",
    "development_mode": true,
    "log_errors": true,

    "database": {
        "type": "mysql",
        "host": "localhost",
        "database": "name",
        "username": "root",
        "password": ""
    },

    "CORS": {
        "origin": "*",
        "methods": "GET, POST, OPTIONS, PUT, DELETE, PATCH",
        "headers": "*",
        "age": 86400
    },

    "assets": {
        "disable-browser-cache": false,
        "js": {
            "vue": true,
            "utils": true,
            "http": true,
            "time": false
        },
        "css": {
            "grid": true,
            "reset": true,
            "lib": true
        }
    },

    "tests": {
        "alternativeDatabase": null
    },
    
    "cache": {
        "enabled": false,
        "assets": false,
        "dom": false,
        "days": 10,
        "hours": 0,
        "minutes": 0,
        "seconds": 0
    }
}